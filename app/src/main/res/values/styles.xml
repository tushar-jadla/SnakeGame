<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="commonStyleforText">
        <item name="android:layout_width">307dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textColorHint">@android:color/background_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CommonStyleForTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:fontFamily">@font/kurale</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
